@page "/movies"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<div class="sl-movies">
    <h1 class="em-page-title">Movies</h1>

    @if (IsLoading)
    {
        <Loader></Loader>
    }
    else
    {
        <div class="action-bar">
            <MatTooltip Tooltip="Add Movie">
                <MatIconButton RefBack="@context" Icon="add" @onclick="OpenAddMovieDialog"></MatIconButton>
            </MatTooltip>
        </div>
        @if (MovieList != null && MovieList.Count > 0)
        {
            <div class="movie-list">
                <ListTable Header="Header" Footer="Footer" Body="MovieList" TList="ManagerAPI.Shared.DTOs.SL.MovieListDto" OnRowClick="@(e => RedirectToData(e))"></ListTable>
            </div>
        }
        else
        {
            <div class="text-center">Movie list is empty</div>
        }
    }
</div>