@page "/books/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<div class="sl-book-data">
    @if (Book != null)
    {
        <h1 class="em-page-title">@Book.Name</h1>
    }
    @if (IsLoading)
    {
        <Loader></Loader>
    }
    else
    {
        <div class="action-bar">
            <MatButton @onclick="OpenEditBookModal">Edit</MatButton>
            <MatButton @onclick="DeleteBook">Delete</MatButton>
            <MatButton @onclick="AddToMyBooks">Add to My Books</MatButton>
            <MatButton @onclick="RemoveFromMyBooks">Remove FROM My Books</MatButton>
            <MatButton @onclick="@(() => Navigation.NavigateTo("/books"))">Book List</MatButton>
            <MatButton @onclick="@(() => Navigation.NavigateTo("/my-books"))">My Book List</MatButton>
        </div>
        @if (Book != null)
        {
            @Book.Author
        }
    }
</div>