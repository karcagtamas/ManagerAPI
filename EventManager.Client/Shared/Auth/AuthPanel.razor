<div class="col col-12">
    <div class="em-panel col col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <MudCard class="p-3">
            <MudCardContent>
                <MudText Typo="Typo.h1">
                    <div class="panel-title">
                        <strong>@Title</strong>
                    </div>
                </MudText>
                <div class="panel-content">
                    @ChildContent
                </div>
            </MudCardContent>
        </MudCard>
    </div>
</div>

@code {

    /// <summary>
    /// Display title
    /// </summary>
    [Parameter]
    public string Title { get; set; }

    /// <summary>
    /// Display content
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

}