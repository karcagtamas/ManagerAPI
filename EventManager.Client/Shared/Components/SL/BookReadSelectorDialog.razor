<div class="sl-book-read-selector-dialog">
    @if (IsLoading)
    {
        <Loader></Loader>
    }
    else
    {
        @if (List != null && List.Count > 0)
        {
            <div class="book-list">
                <ListTable Header="Header" Body="List" TList="ManagerAPI.Shared.DTOs.MC.MyBookSelectorListDto" IsSelectionEnabled="true" SelectedIndexes="SelectedIndexList" FooterDisplay="false" OnRowClick="@(e => SwitchReadFlag(e))"></ListTable>
            </div>
        }
    }
</div>