@using ManagerAPI.Shared.Helpers
<div class="comment">
    <div class="comment-header">
        <strong>@Comment.User</strong> <i>@DateHelper.DateToString(Comment.Creation)</i>
    </div>
    <div class="comment-body">
        @if (IsEdit)
        {
            <div class="col col-12 p-1">
                <MatTextField class="w-100" @bind-Value="CommentText" Label="Comment" Dense="true" Outlined="true" TextArea="true"></MatTextField>
            </div>
        }
        else
        {
            @Comment.Comment
        }
    </div>
    @if (Comment.OwnerIsCurrent)
    {
        <div class="comment-action">
            <span class="spacer"></span>
            @if (IsEdit)
            {
                <MatButton @onclick="SaveEdit">Save</MatButton>
                <MatButton @onclick="CancelEdit">Cancel</MatButton>
            }
            else
            {
                <MatButton @onclick="EditComment">Edit</MatButton>
                <MatButton @onclick="DeleteComment">Delete</MatButton>
            }
        </div>
    }
</div>