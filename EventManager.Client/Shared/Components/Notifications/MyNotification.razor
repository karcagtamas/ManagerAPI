@using EventManager.Client.Models.Notifications
@inject EventManager.Client.Services.Interfaces.IHelperService HelperService


@if (Notification != null)
{
    <div class="em-notification col col-12 row importance-@Notification.ImportanceLevel">
        <div class="col col-10 em-notification-content">
            @Notification.Content
        </div>
        <div class="col col-2 em-notification-right">
            <div>
                @if (Notification.IsRead)
                {
                    <span>
                        Read
                    </span>
                }
                else
                {
                    <span>
                        Not Read
                    </span>
                }
            </div>
            <div></div>
            <div></div>
        </div>
        <div class="col col-12 em-notification-footer">
            <span>@Notification.SystemName - @Notification.SystemShortName</span>
            <span class="spacer"></span>
            <span>@HelperService.DateToString(Notification.SentDate)</span>
        </div>
    </div>
}

@code {
    [Parameter]
    public NotificationDto Notification { get; set; }
}
