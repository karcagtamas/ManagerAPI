@if (WorkingField != null)
{
    <div @onclick="@OpenUpdateFieldModal" class="wm-field @(IsModifiable ? "modifiable" : "")">
    <div class="title-row">
        <span class="title">@WorkingField.Title</span>
        <span class="spacer"></span>
        <span class="hours">@($"{WorkingField.Length:0.00} h")</span>
    </div>
    <div class="description">
        @WorkingField.Description
    </div>
</div>
}
