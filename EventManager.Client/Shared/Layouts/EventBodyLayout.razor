@inherits LayoutComponentBase

<div class="row col col-12">
    <div class=" col col-2 em-navbar-outer">
        <EventBodyNavigator Id="@Id"/>
    </div>
    <div class="col col-10 main main-box">
        <MatCard class="p-3 main-content">
            @Body
        </MatCard>
    </div>
</div>

@code {

    protected int Id { get; set; }

    protected override void OnParametersSet()
    {
        object id = null;
        if ((this.Body.Target as RouteView)?.RouteData.RouteValues?.TryGetValue("Id", out id) == true)
        {
            this.Id = (int) id;
            Console.WriteLine(this.Id);
        }
    }

}