@typeparam TList

@if (Header != null)
{
    <div class="list">
        @if (ShowFilter)
        {
            <div class="col col-12 p-1">
                <MatTextField class="w-100" @bind-Value="FilterValue" Label="Filter" Dense="true" Outlined="true"></MatTextField>
            </div>
        }
        <table>
            <thead>
            <tr>
                @foreach (var head in Header)
                {
                    <th @onclick="@(() => HeaderClick(head))">@head.DisplayName</th>
                }
            </tr>
            </thead>
            <tbody>
            @foreach (var body in Body)
            {
                <tr @onclick="@(() => RowClick(body))" class="@(IsSelectionEnabled && SelectedIndexes.Contains(body.Id) ? "selected" : "")">
                    @foreach (var head in Header)
                    {
                        <td>@head.Displaying(GetProperty(body, head.PropertyName))</td>
                    }
                </tr>
            }
            </tbody>
            @if (FooterDisplay)
            {
                <tfoot>
                <tr>
                    @foreach (var foot in Footer)
                    {
                        <th>@foot</th>
                    }
                </tr>
                </tfoot>
            }
        </table>
    </div>
}