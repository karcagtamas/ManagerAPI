<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Give a number for @Input.Name
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudNumericField Label="Number Value" @bind-Value="NumberInputValue" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirm">Confirm</MudButton>
    </DialogActions>
</MudDialog>