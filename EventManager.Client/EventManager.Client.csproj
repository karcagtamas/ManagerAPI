    <Content Update="Shared\Components\MyProfile\UploadProfileImage.razor">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>
    <Content Update="Shared\Components\MyProfile\ChangeUsername.razor">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>
    <Content Update="Shared\Common\CurrentUser.razor">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ManagerAPI.Shared\ManagerAPI.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ScssFiles Include="**/*/*.scss" Exclude="node_modules/**" />
  </ItemGroup>

  <Target Name="NodeCheck" BeforeTargets="CompileSass">
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is requred to build this project." />
    <Message Importance="high" Text="Restoring deps via 'npm'. This may take a few mins." />
    <Exec Command="npm install" />
  </Target>

  <Target Name="CompileSass" BeforeTargets="Compile">
    <Message Text="All the SCSS Files: @(ScssFiles->'%(filename).css')" Importance="high" />
    <Exec Command="npm run node-sass -- %(ScssFiles.Identity) %(relativedir)%(filename).css" />
  </Target>
</Project>
